<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css">
    <title>SignalR</title>
</head>
<body>
    <div class="navbar">
        <a asp-action="Index" asp-controller="Home">Home</a>
        <a asp-action="Users" asp-controller="Home">Find</a>
        <a asp-action="Private" asp-controller="Home">Private</a>
    </div>
    <div class="main">
        @if(User.Identity.IsAuthenticated)
        {
            <vc:room></vc:room>
        }
        <div class="chat">
            @RenderBody() 
        </div>
    </div>
    <div class="modal" id="create-room-modal">
        <form asp-controller="Home" asp-action="CreateRoom" class="modal-body">
            <button type="button" class="close" onclick="closemodal()">X</button>
            <header>Ctrate Room</header>
            <div>
                <input name="name">
            </div>
            <footer>
                <button id="">Create</button>
            </footer>
        </form>
    </div>
    <script src="~/JS/site.js"></script>
    @RenderSection("Scripts",false)
</body>
</html>
